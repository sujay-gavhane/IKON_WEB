<main class="product-m">
  <div class="product-d">
    <div class="img-side">
      <div class="imgss">
        <div class="all-imgs">
          <div class="img" onclick="showThisImg(this);">
            <img src="<%= image_path('product1.jpg') %>" alt="product">
          </div>
          <div class="img" onclick="showThisImg(this);">
            <img src="<%= image_path('product2.jpg') %>" alt="product">
          </div>
          <div class="img" onclick="showThisImg(this);">
            <img src="<%= image_path('product3.jpg') %>" alt="product">
          </div>
        </div>
        <div class="one-img">

        </div>
      </div>
    </div>
    <div class="info-side">
        <h1><%=@product.name%></h1>
        <h2>$<%= @product.price %> + <span>Shipping</span></h2>
        <p><%= @product.description %></p>

        <h3>Color:</h3>
        <select class="" name="">
          <option value="black">Black</option>
          <option value="grey">Grey</option>
          <option value="custom">Custom</option>
        </select>
    </div>
  </div>
  <button type="button" name="button">Add to Cart</button>
