<main class="form-wrapper register-form">
  <span class="">
    <h1>Register</h1>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', required: true %>
      <small>We'll never share your email with anyone else.</small>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password' %>
      <small>Have an account? <%= link_to 'Login', new_user_session_path %></small>
      <button type="submit" class="form-button btn btn-primary">Register</button>
    <% end %>
  </span>
</main>
